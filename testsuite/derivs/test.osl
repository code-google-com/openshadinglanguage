shader
test ()
{
    printf ("Test derivatives\n\n");

    printf ("u = %g, Dx(u) = %g, Dy(u) = %g\n", u, Dx(u), Dy(u));
    printf ("v = %g, Dx(v) = %g, Dy(v) = %g\n", v, Dx(v), Dy(v));
    printf ("P = %g, Dx(P) = %g, Dy(P) = %g\n", P, Dx(P), Dy(P));
    
    {
        float a = u;
        printf ("\n");
        printf ("Assign: a = u; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = u+v;
        printf ("\n");
        printf ("Add: a = u+v; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
        a = u+0.5;
        printf ("Add constant: a = u+0.5; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = u-v;
        printf ("\n");
        printf ("Sub: a = u-v; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
        a = u-0.5;
        printf ("Sub constant: a = u-0.5; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = -u;
        printf ("\n");
        printf ("Negate: a = -u; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = u*v;
        printf ("\n");
        printf ("Mul: a = u*v; a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = u/(v+1);
        printf ("\n");
        printf ("Div: a = u/(v+1); a = %g, Dy(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

}
