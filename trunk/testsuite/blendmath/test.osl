{
    {
        float a = 1;
        float b = 3;
        float c = 5;
        printf ("  clamp (%g, %g, %g) = %g\n", a, b, c, clamp (a,b,c));
        printf ("  clamp (%g, %g, %g) = %g\n", b, a, c, clamp (b,a,c));
        printf ("  clamp (%g, %g, %g) = %g\n", c, a, b, clamp (c,a,b));
        printf ("  clamp (%g, %g, %g) = %g\n", a, c, b, clamp (a,c,b));
    }

    { 
        vector a = 1;
        vector b = 3;
        vector c = 5;
        printf ("  clamp (%g, %g, %g) = %g\n", a, b, c, clamp (a,b,c));
        printf ("  clamp (%g, %g, %g) = %g\n", b, a, c, clamp (b,a,c));
        printf ("  clamp (%g, %g, %g) = %g\n", c, a, b, clamp (c,a,b));
        printf ("  clamp (%g, %g, %g) = %g\n", a, c, b, clamp (a,c,b));
    }

    printf (" varying:\n");
    {
        float a = u;
        float b = v;
        float c = u+v;
        printf ("  clamp (%g, %g, %g) = %g\n", a, b, c, clamp (a,b,c));
        printf ("  clamp (%g, %g, %g) = %g\n", b, a, c, clamp (b,a,c));
        printf ("  clamp (%g, %g, %g) = %g\n", c, a, b, clamp (c,a,b));
        printf ("  clamp (%g, %g, %g) = %g\n", a, c, b, clamp (a,c,b));
    }

    {
        color a = u;
        color b = v;
        color c = u+v;
        printf ("  clamp (%g, %g, %g) = %g\n", a, b, c, clamp (a,b,c));
        printf ("  clamp (%g, %g, %g) = %g\n", b, a, c, clamp (b,a,c));
        printf ("  clamp (%g, %g, %g) = %g\n", c, a, b, clamp (c,a,b));
        printf ("  clamp (%g, %g, %g) = %g\n", a, c, b, clamp (a,c,b));
    }
