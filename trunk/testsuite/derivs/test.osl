        printf ("Add constant: a = u+0.5; a = %g, Dx(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = u-v;
        printf ("\n");
        printf ("Sub: a = u-v; a = %g, Dx(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
        a = u-0.5;
        printf ("Sub constant: a = u-0.5; a = %g, Dx(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
    }

    {
        float a = -u;
        printf ("\n");
        printf ("Negate: a = -u; a = %g, Dx(a) = %g, Dy(a) = %g\n",
                a, Dx(a), Dy(a));
